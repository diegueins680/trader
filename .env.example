# Backend (optional; only needed for live/test trading endpoints)
BINANCE_API_KEY=
BINANCE_API_SECRET=

# REST API auth token (recommended for any deployment)
# Generate with: openssl rand -hex 32
TRADER_API_TOKEN=

# Optional: enable persistence of API/bot operations (append-only JSONL).
# The backend will write `${TRADER_OPS_DIR}/ops.jsonl` and expose `GET /ops`.
TRADER_OPS_DIR=
TRADER_OPS_MAX_IN_MEMORY=20000
